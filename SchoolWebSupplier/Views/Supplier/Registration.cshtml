@model RegistrationModel

@{
    ViewData["Title"] = "Регистрация";
}

@section Links {
    <div>
            <a style="float: right; margin-right: 20px;" asp-area="" asp-controller="Home" asp-action="Index">Главная страница</a>
    </div>
}

<h1>Регистрация</h1>

<hr />
<div>
    <div>
        <form style="margin: 0 auto; width: 960px;" asp-action="Registration">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SupplierFIO" class="control-label"></label>
                <input asp-for="SupplierFIO" class="form-control" />
                <span asp-validation-for="SupplierFIO" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зарегистрироваться"/>
            </div>
        </form>
    </div>
</div>
