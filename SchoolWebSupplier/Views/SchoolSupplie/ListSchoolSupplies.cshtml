@model IEnumerable<AbstractSchoolBusinessLogic.ViewModels.SchoolSupplieViewModel>

@{
    ViewData["Title"] = "Канцелярия";
}

<div class="text-left">
    <h4>Пополнение склада №@ViewBag.wareHouseId</h4>
</div>

<hr />
<div>
    <a class="text-dark" asp-controller="WareHouse" asp-action="Details" asp-route-id="@ViewBag.WareHouseId">Вернуться назад</a>
</div>
<hr />

<table class="table table-striped table-bordered">
    <thead class="thead thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SchoolSupplieName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SchoolSupplieName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a class="btn btn-primary btn-sm btn-block" asp-action="AddSchoolSupplie" asp-route-foodId="@item.Id" asp-route-fridgeId="@ViewBag.WareHouseId">Пополнить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
