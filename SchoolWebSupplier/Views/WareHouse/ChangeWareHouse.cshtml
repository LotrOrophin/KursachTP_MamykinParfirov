@model SchoolDatabaseImplement.Models.WareHouse

@{
    ViewData["Title"] = "Изменение склада";
}

@section Links {
    <div>
                <a style="margin-right:20px; float:right;" asp-area="" asp-controller="Request" asp-action="Request">Список заявок</a>
    </div>
}

<div class="text-left">
    <h4>Изменение склада №@Model.Id</h4>
</div>

<hr />
<div>
    <a asp-action="ListWareHouses">Вернуться назад</a>
</div>
<hr />

<div>
    <div>
        <form asp-action="ChangeWareHouse">
            <div asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="Id" />
            <div>
                <label asp-for="WareHouseName" ></label>
                <input asp-for="WareHouseName"  />
                <span asp-validation-for="WareHouseName" ></span>
            </div>
            <div>
                <label asp-for="Size" ></label>
                <input asp-for="Size" />
                <span asp-validation-for="Size" ></span>
            </div>
            <div>
                <label asp-for="Type" ></label>
                <input asp-for="Type"  />
                <span asp-validation-for="Type" ></span>
            </div>
            <div>
                <input type="submit" value="Сохранить" />
            </div>
        </form>
    </div>
</div>