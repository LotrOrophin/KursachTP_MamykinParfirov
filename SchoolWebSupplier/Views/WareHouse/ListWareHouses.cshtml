@model IEnumerable<AbstractSchoolBusinessLogic.ViewModels.WareHouseViewModel>

@{
    ViewData["Title"] = "Склад";
}

@section Links {
    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
                <a class="nav-link text-light" asp-area="" asp-controller="Request" asp-action="Request">Список заявок</a>
            </li>
        </ul>
    </div>
}

<div class="text-left">
    <h4>Список складов</h4>
</div>

<hr />

<div class="text-left">
    <h6>Поставщик - @Program.Supplier.SupplierFIO</h6>
</div>

<p>
    <a class="btn btn-primary d-block mx-auto" asp-action="CreateWareHouse">Создание склада</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WareHouseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WareHouseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.Id" asp-r>Выбрать</a>|
                    <a class="btn btn-primary btn-sm" asp-action="ChangeFridge" asp-route-id="@item.Id">Изменить</a>|
                    <a class="btn btn-primary btn-sm" asp-action="DeleteFridge" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
