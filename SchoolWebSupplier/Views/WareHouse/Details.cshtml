@model Dictionary<int, (string, int, int)>

@{
    ViewData["Title"] = "Склад";
}

@section Links {
    <div>
            <a style="margin-right:20px; float:right;" asp-area="" asp-controller="Request" asp-action="Request">Заявки </a>
            <a style="margin-right:20px; float:right;" class="nav-link text-light" asp-area="" asp-controller="WareHouse" asp-action="ListWareHouses">Склады </a>
    </div>
}
<div class="text-left">
    <h4>Склад №@ViewBag.wareHouseId</h4>
</div>

<hr/>
<div>
    <a asp-action="ListWareHouses">Вернуться назад</a>
</div>
<hr/>

<p><a asp-controller="SchoolSupplie" asp-action="ListSchoolSupplies" asp-route-wareHouseId="@ViewBag.WareHouseId">Пополнить склад</a></p>

<table cellspacing="2" border="1" cellpadding="5">
    <thead>
        <tr>
            <th>
                Канцелярия
            </th>
            <th>
                Свободно
            </th>
            <th>
                Зарезервировано
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Value.Item1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value.Item2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value.Item3)
                </td>
            </tr>
        }
    </tbody>
</table>
