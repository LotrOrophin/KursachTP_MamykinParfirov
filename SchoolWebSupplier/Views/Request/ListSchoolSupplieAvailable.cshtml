@model IEnumerable<AbstractSchoolBusinessLogic.ViewModels.WareHouseAvailableViewModel>

@{
    ViewData["Title"] = "Список складов";
}

<div class="text-left">
    <h4>@ViewBag.SchoolSupplieName</h4>
</div>

<hr />
<div class="text-left">
    <h6>@ViewBag.Count канцелярии в наличии</h6>
</div>
<hr />

<table class="table table-striped table-bordered">
    <thead class="thead thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WareHouseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.WareHouseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Count)
                </td>
                <td class="text-center">
                    <a class="btn btn-primary btn-sm btn-block" asp-controller="WareHouse"
                       asp-action="ReserveSchoolSupplies" asp-route-fridgeId="@item.WareHouseId"
                       asp-route-foodId="@ViewBag.SchoolSupplieId" asp-route-count="@ViewBag.Count"
                       asp-route-requestId="@ViewBag.RequestId">
                        Зарезервировать
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
